<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>
        <form-bean name="NewsForm" type="com.epam.testapp.model.NewsForm"/>
    </form-beans>

    <action-mappings>

        <action path="/News"
                type="com.epam.testapp.action.NewsAction"
                parameter="method"
                name="NewsForm"
                scope="request"
                validate="false">

            <forward name="show_list_success" path="/WEB-INF/jsp/news-list.jsp"/>
            <forward name="show_add_form_success" path="/WEB-INF/jsp/add-form.jsp"/>
            <forward name="show_news_view_success" path="/WEB-INF/jsp/news-view.jsp"/>
            <forward name="delete_news_success" path="/News.do?method=list" redirect="true"/>
        </action>

        <action
                path="/AddNews"
                type="com.epam.testapp.action.AddNewsAction"
                name="NewsForm"
                scope="request"
                parameter="method"
                validate="true"
                cancellable="true"
                input="/WEB-INF/jsp/add-form.jsp">

            <forward name="success" path="/WEB-INF/jsp/news-view.jsp"/>
            <forward name="cancel" path="/NewsList.do"/>

        </action>

        <action path="/NewsList"
                type="com.epam.testapp.action.ShowNewsListAction"
                name="NewsForm"
                input="/WEB-INF/jsp/news-list.jsp">

            <forward name="success" path="/WEB-INF/jsp/news-list.jsp"/>
        </action>

        <action path="/AddNewsForm"
                type="com.epam.testapp.action.ShowAddNewsFormAction"
                name="NewsForm"
                validate="false">

            <forward name="success" path="/WEB-INF/jsp/add-form.jsp"/>
        </action>

        <action path="/NewsView"
                type="com.epam.testapp.action.ShowNewsViewAction"
                name="NewsForm"
                input="/WEB-INF/jsp/news-list.jsp">

            <forward name="success" path="/WEB-INF/jsp/news-view.jsp"/>
        </action>


        <action
                path="/Locale"
                type="com.epam.testapp.action.LanguageSelectAction"
                parameter="method">

            <forward name="success" path="/NewsList.do"/>
        </action>

    </action-mappings>

    <controller>
        <set-property property="processorClass" value="org.springframework.web.struts.DelegatingTilesRequestProcessor"/>
    </controller>

    <message-resources parameter="lang"/>

    <plug-in className="org.apache.struts.tiles.TilesPlugin">
        <set-property property="definitions-config"
                      value="/WEB-INF/config/tiles-defs.xml"/>
        <set-property property="moduleAware" value="true"/>
    </plug-in>

    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property value="/WEB-INF/config/validator-rules.xml, /WEB-INF/config/validation.xml"
                      property="pathnames"/>
    </plug-in>

    <plug-in className="org.springframework.web.struts.ContextLoaderPlugIn">
        <set-property property="contextConfigLocation"
                      value="/WEB-INF/config/action-servlet.xml, /WEB-INF/config/applicationContext.xml"/>
    </plug-in>

</struts-config>