<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>
        <form-bean name="NewsForm" type="com.epam.testapp.model.NewsForm"/>
    </form-beans>

    <action-mappings>

       <action path="/NewsList"
                type="com.epam.testapp.action.ShowNewsListAction"
                parameter="/WEB-INF/jsp/index.jsp">

            <forward name="success" path="/WEB-INF/jsp/news-list.jsp"/>
        </action>

        <action path="/AddNewsForm"
                type="com.epam.testapp.action.ShowAddNewsFormAction"
                parameter="/WEB-INF/jsp/add-form.jsp">

            <forward name="success" path="/WEB-INF/jsp/add-form.jsp"/>
        </action>

        <action path="/NewsView"
                type="org.apache.struts.actions.ForwardAction"
                parameter="/WEB-INF/jsp/news-view.jsp"/>

        <action path="/NewsViewAction"
                name="NewsForm"
                type="com.epam.testapp.action.NewsViewAction"
                parameter="method"
                scope="request"
                input="/WEB-INF/jsp/news-view.jsp">

            <forward name="success" path="/WEB-INF/jsp/add-form.jsp"/>
            <forward name="delete" path="/NewsList.do"/>
        </action>

        <action
                path="/AddNews"
                type="com.epam.testapp.action.AddNewsAction"
                name="NewsForm"
                scope="request"
                parameter="method"
                cancellable="true"
                input="/WEB-INF/jsp/add-form.jsp">

            <forward name="success" path="/NewsView.do"/>
            <forward name="cancel" path="/NewsList.do"/>

        </action>

        <action
                path="/Locale"
                type="com.epam.testapp.action.LanguageSelectAction"
                parameter="method">

            <forward name="success" path="/NewsList.do"/>
        </action>

    </action-mappings>

    <controller>
        <set-property property="processorClass" value="org.springframework.web.struts.DelegatingTilesRequestProcessor"/>
    </controller>

    <message-resources parameter="lang"/>

    <plug-in className="org.apache.struts.tiles.TilesPlugin">
        <set-property property="definitions-config"
                      value="/WEB-INF/config/tiles-defs.xml"/>
        <set-property property="moduleAware" value="true"/>
    </plug-in>

    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property value="/WEB-INF/config/validator-rules.xml, /WEB-INF/config/validation.xml"
                      property="pathnames"/>
    </plug-in>

    <plug-in className="org.springframework.web.struts.ContextLoaderPlugIn">
        <set-property property="contextConfigLocation"
                      value="/WEB-INF/config/action-servlet.xml, /WEB-INF/config/applicationContext.xml"/>
    </plug-in>

</struts-config>