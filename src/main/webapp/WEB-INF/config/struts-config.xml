<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>
        <form-bean name="News" type="com.epam.testapp.model.News"/>
    </form-beans>

    <action-mappings>

        <action path="/NewsList"
                type="org.apache.struts.actions.ForwardAction"
                parameter="/WEB-INF/jsp/index.jsp"/>
        <action path="/AddNewsForm"
                type="org.apache.struts.actions.ForwardAction"
                parameter="/WEB-INF/jsp/add-form.jsp"/>

    </action-mappings>

    <message-resources parameter="lang"/>

    <plug-in className="org.apache.struts.tiles.TilesPlugin">
        <set-property property="definitions-config"
                      value="/WEB-INF/config/tiles-defs.xml"/>
        <set-property property="moduleAware" value="true"/>
    </plug-in>

    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property value="/WEB-INF/config/validator-rules.xml, /WEB-INF/config/validation.xml"
                      property="pathnames"/>
    </plug-in>


</struts-config>